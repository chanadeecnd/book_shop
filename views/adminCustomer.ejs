<%-include('./partials/adminHeader')%>
            <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4 py-4">
                <div class="d-flex justify-content-between align-items-center mb-2 mt-5">
                    <h1>Customer</h1>  
                </div>
                
                <table id="example" class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>UserId</th>
                            <th>Email</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <%doc.forEach(data=>{%>
                        <tr>
                            <td><%=data.UserId%></td>
                            <td><%=data.username%>></td>
                            <td><%=data.date%></td>
                            <td><a onclick="return confirm('Are you sure your want to delete <%=data.username%> ?')" href="/delete/user/<%=data._id%>" class="confirmation"><i class="fa-solid fa-trash-can" style="color: #f13b57;"></i></a></td>
                        </tr>
                    <%})%>
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>UserId</th>
                            <th>Email</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </main>
<%-include('./partials/adminFooter')%>